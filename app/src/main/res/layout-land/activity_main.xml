<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:columnCount="3">

        <Button
            android:id="@+id/button0_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp" />

        <Button
            android:id="@+id/button1_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button2_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button0_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button1_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button2_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button0_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button1_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button2_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="tileClicked"
            android:text=" "
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="2" />
    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/end_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_new_game"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:onClick="resetClicked"
        android:text="New Game" />

</LinearLayout>